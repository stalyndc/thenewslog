{
    "name": "thenewslog/thenewslog",
    "description": "Scaffold for TheNewsLog.org",
    "license": "proprietary",
    "type": "project",
    "require": {
        "php": "^8.1",
        "debril/feed-io": "^4.9",
        "ezyang/htmlpurifier": "^4.17",
        "guzzlehttp/guzzle": "^7.8",
        "monolog/monolog": "^2.9",
        "phpmailer/phpmailer": "^6.9",
        "symfony/cache": "^6.4",
        "symfony/dotenv": "^6.4",
        "twig/twig": "^3.9",
        "voku/portable-ascii": "^2.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/"
        }
    },
    "scripts": {
        "lint": [
            "@php scripts/check-lint.php"
        ],
        "test": [
            "@lint"
        ],
        "ci": [
            "composer validate --strict",
            "@test"
        ]
    },
    "config": {
        "sort-packages": true
    }
}
