{% extends 'layout.twig' %}

{% set current_nav = 'home' %}

{% block title %}Home â€” The News Log{% endblock %}

{% block content %}
<section class="card">
    <div class="badge">Daily Highlights</div>
    <h2>Latest Curated Links</h2>
    {% if links is defined and links|length > 0 %}
        <ul class="list-links">
            {% for link in links %}
                <li class="list-links__item">
                    <h3>{{ link.title }}</h3>
                    {% if link.source_name %}
                        <span class="badge">{{ link.source_name }}</span>
                    {% endif %}
                    {% if link.blurb %}
                        <p>{{ link.blurb }}</p>
                    {% endif %}
                </li>
            {% endfor %}
        </ul>
    {% else %}
        <div class="empty-state">
            <p>No curated links published yet. Check back soon.</p>
        </div>
    {% endif %}
</section>
{% endblock %}
