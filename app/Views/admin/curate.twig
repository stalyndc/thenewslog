{% extends 'layout.twig' %}

{% block title %}Curate â€” The News Log{% endblock %}

{% block content %}
<section class="card">
    <div class="badge">Curate</div>
    <h2>Curate Item</h2>
    {% if item %}
        <article class="curate-item">
            <h3>{{ item.title }}</h3>
            <p><strong>Feed:</strong> {{ item.feed_title }}</p>
            {% if item.source_name %}
                <p><strong>Source:</strong> {{ item.source_name }}</p>
            {% endif %}
            {% if item.summary_raw %}
                <p>{{ item.summary_raw }}</p>
            {% endif %}
        </article>

        {% if curated %}
            <section class="curate-existing">
                <h3>Existing Curated Entry</h3>
                <p><strong>Title:</strong> {{ curated.title }}</p>
                <p><strong>Blurb:</strong> {{ curated.blurb }}</p>
            </section>
        {% endif %}
    {% else %}
        <div class="empty-state">
            <p>Item not found.</p>
        </div>
    {% endif %}

    {% if message %}
        <div class="empty-state">
            <p>{{ message }}</p>
        </div>
    {% endif %}
</section>
{% endblock %}
