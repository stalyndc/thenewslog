{% extends 'layout.twig' %}

{% block title %}Admin Login â€” The News Log{% endblock %}

{% block content %}
<section class="card">
    <div class="badge">Editor Access</div>
    <h2>Sign In</h2>

    {% if error %}
        <div class="empty-state">
            <p>{{ error }}</p>
        </div>
    {% endif %}

    <form method="post" class="form">
        {{ csrf_field() }}
        <div class="form-group">
            <label for="email">Email</label>
            <input id="email" name="email" type="email" class="input-control" value="{{ email|e }}" required autofocus>
        </div>
        <div class="form-group">
            <label for="password">Password</label>
            <input id="password" name="password" type="password" class="input-control" required>
        </div>
        <div class="form-actions">
            <button type="submit" class="btn btn-primary">Log In</button>
        </div>
    </form>
</section>
{% endblock %}
