{% extends 'layout.twig' %}

{% block title %}Manage Edition â€” The News Log{% endblock %}

{% block content %}
<section class="card">
    <div class="badge">Edition</div>
    <h2>Edition for {{ date|default('today') }}</h2>
    {% if links is defined and links|length > 0 %}
        <ol class="list-links">
            {% for link in links %}
                <li class="list-links__item">
                    <h3>{{ link.title }}</h3>
                    {% if link.blurb %}
                        <p>{{ link.blurb }}</p>
                    {% endif %}
                </li>
            {% endfor %}
        </ol>
    {% else %}
        <div class="empty-state">
            <p>No curated links assigned to this edition yet.</p>
        </div>
    {% endif %}
</section>
{% endblock %}
