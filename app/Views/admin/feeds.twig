{% extends 'layout.twig' %}

{% block title %}Feed Management â€” The News Log{% endblock %}

{% block content %}
<section class="card">
    <div class="badge">Sources</div>
    <h2>Feeds</h2>
    {% if feeds is defined and feeds|length > 0 %}
        <table>
            <thead>
                <tr>
                    <th>Title</th>
                    <th>Feed URL</th>
                    <th>Status</th>
                </tr>
            </thead>
            <tbody>
            {% for feed in feeds %}
                <tr>
                    <td>{{ feed.title }}</td>
                    <td><a href="{{ feed.feed_url }}" target="_blank" rel="noopener">{{ feed.feed_url }}</a></td>
                    <td>{{ feed.active ? 'Active' : 'Inactive' }}</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    {% else %}
        <div class="empty-state">
            <p>No feeds registered yet.</p>
        </div>
    {% endif %}
</section>
{% endblock %}
